{
    "name": "functions",
    "scripts": {
        "lint": "eslint --fix --ext .js,.ts .",
        "build": "tsc",
        "deploy": "rm -rf lib && cd .. && firebase deploy --only functions && cd functions",
        "logs": "firebase functions:log",
        "test": "mocha --reporter spec -r ts-node/register --timeout 3600000 --reporter-option maxDiffSize=0",
        "testAll": "npm run test test/**/*.test.ts test/*.test.ts",
        "test:coverage": "nyc npm run test",
        "migrate": "ts-node src/migrateDatabase"
    },
    "engines": {
        "node": "16"
    },
    "main": "lib/src/index.js",
    "dependencies": {
        "braintree": "^3.16.0",
        "firebase-function": "^1.4.57",
        "firebase-functions": "^4.4.1",
        "js-base64": "^3.7.5",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/braintree": "^3.3.8",
        "@types/chai": "^4.3.5",
        "@types/dom-parser": "^0.1.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.3.2",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "chai": "^4.3.7",
        "eslint": "^8.43.0",
        "firebase": "^9.23.0",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "all": true,
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [],
        "reporter": [
            "html",
            "lcov",
            "text"
        ],
        "report-dir": "coverage"
    },
    "private": true
}
