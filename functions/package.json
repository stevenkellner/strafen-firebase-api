{
    "name": "functions",
    "scripts": {
        "lint": "eslint --fix --ext .js,.ts .",
        "build": "tsc",
        "deploy": "rm -rf lib && cd .. && firebase deploy --only functions && cd functions",
        "logs": "firebase functions:log",
        "test": "mocha --reporter spec -r ts-node/register --timeout 3600000 --reporter-option maxDiffSize=0",
        "testAll": "npm run test test/**/*.test.ts test/*.test.ts",
        "test:coverage": "nyc npm run test"
    },
    "engines": {
        "node": "16"
    },
    "main": "lib/src/index.js",
    "dependencies": {
        "firebase-function": "^1.4.37",
        "firebase-functions": "^4.2.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.4",
        "@types/dom-parser": "^0.1.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.15.11",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "chai": "^4.3.7",
        "eslint": "^8.38.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "firebase": "^9.19.1",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "all": true,
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [],
        "reporter": [
            "html",
            "lcov",
            "text"
        ],
        "report-dir": "coverage"
    },
    "private": true
}
